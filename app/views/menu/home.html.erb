<div class="picture-row row-fluid">
  <% (1..3).each do |index| %>
    <div class="picture span4">
      <%= link_to gallery_path(index) do %>
        <%= image_tag "gallery#{index}.png" %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="picture-row row-fluid">
  <% (4..6).each do |index| %>
    <div class="picture span4">
      <%= link_to gallery_path(index) do %>
        <%= image_tag "gallery#{index}.png" %>
      <% end %>
    </div>
  <% end %>
</div>
